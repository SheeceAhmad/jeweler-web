<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders | JEWELER</title>
    <link rel="stylesheet" href="/styles/checkout.css">
</head>
<body>
    <header class="checkout-header">
        <div class="logo-div">
            <img src="/assets/logo.png" alt="logo">
        </div>
        <div class="secure-label">
            <span>MY ORDERS</span>
        </div>
    </header>

    <main class="checkout-container" style="padding: 20px;">
        <section class="checkout-form-section" style="width: 100%;">
            <h1 class="main-title">Enter Your Email to View Orders</h1>
            <form action="/my-orders" method="POST">
                <div class="form-group">
                    <input type="email" name="email" placeholder="john@example.com" value="<%= email %>" required>
                </div>
                <button type="submit" class="place-order-btn">View Orders</button>
            </form>
        </section>

        <% if (orders && orders.length > 0) { %>
        <section class="order-summary" style="margin-top: 30px;">
            <h2 class="summary-title">Your Orders</h2>
            <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
                <thead>
                    <tr style="border-bottom: 1px solid #ccc;">
                        <th style="padding: 8px;">Order ID</th>
                        <th style="padding: 8px;">Date</th>
                        <th style="padding: 8px;">Total</th>
                        <th style="padding: 8px;">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <tr style="border-bottom: 1px solid #eee;">
                            <td style="padding: 8px;"><%= order._id %></td>
                            <td style="padding: 8px;"><%= order.createdAt.toLocaleString() %></td>
                            <td style="padding: 8px;">$<%= order.total.toFixed(2) %></td>
                            <td style="padding: 8px;"><%= order.status %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
        <% } else if (orders) { %>
            <p style="margin-top: 20px; color: #888;">No orders found for <%= email %>.</p>
        <% } %>
    </main>
</body>
</html>
